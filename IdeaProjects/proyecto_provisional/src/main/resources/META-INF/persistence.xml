<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">
    <persistence-unit name="ejemplo" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <class>Person</class>
        <class>Animal</class>
        <class>Empleado</class>
        <class>Direccion</class>
        <!--  Replace com.example.Person with your actual entity class  -->
        <!--  Configure your data source, provider, and other properties here  -->
        <properties>
            <property name="jakarta.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
            <property name="jakarta.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/curso_sql"/>
            <property name="jakarta.persistence.jdbc.user" value="root"/>
            <property name="jakarta.persistence.jdbc.password" value="root" />
            <property name="hibernate.hbm2ddl.auto" value="update" /> <!--value=create-drop --> <!--Actualiza tablas si no existe -->
            <!--  Additional JPA properties  -->
        </properties>
    </persistence-unit>
</persistence>
